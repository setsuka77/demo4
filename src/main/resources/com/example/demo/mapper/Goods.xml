<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.GoodsMapper">

	<select id="findProductById"
		resultType="com.example.demo.dto.GoodsDto">
		SELECT * FROM goods WHERE category_id = #{id}
	</select>
	
	 <select id="getProductsByIds" resultType="com.example.demo.entity.Goods">
        SELECT * FROM goods
        WHERE product_id IN
        <foreach item="id" collection="list" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    
</mapper>